# BYSS School Management System - Environment Variables Template
# 复制此文件为 .env 并填写实际值

# ==================== Django 配置 ====================
# 生产环境必须使用强密钥！使用以下命令生成：
# python3 -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# 或在线生成：https://djecrety.ir/
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION

# 允许访问的主机（逗号分隔，生产环境必须改！）
# 示例: byss.cmuhe.com,139.159.215.228
ALLOWED_HOSTS=byss.cmuhe.com,localhost,127.0.0.1

# CORS 允许的源（逗号分隔）
# 开发环境: http://localhost:3000
# 生产环境: http://byss.cmuhe.com 或 https://byss.cmuhe.com
CORS_ALLOWED_ORIGINS=http://byss.cmuhe.com,http://localhost:3000

# ==================== 数据库配置 ====================
DB_NAME=byss
DB_USER=root
DB_PASSWORD=your-strong-password-here
DB_HOST=mysql
DB_PORT=3306

# ==================== Redis 配置 ====================
REDIS_URL=redis://redis:6379/0

# ==================== 邮件配置（可选）====================
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@byss.cmuhe.com

# ==================== 监控配置（可选）====================
# Sentry DSN
SENTRY_DSN=

# ==================== 其他配置 ====================
# 时区
TZ=Asia/Shanghai

# 环境标识
ENVIRONMENT=production

